<h1>Edit user</h1>


<table>
  <tr>
    <th>Home</th>
    <th>Home Score</th>
    <th>Away</th>
    <th>Away Score</th>
    <th></th>
  </tr>
</table>

<table>
<% @users.each do |prediction| %>
  <tr>
    <td><%= prediction.home %></td>
    <td><%= prediction.home_score %></td>
	<td><%= prediction.away %></td>
    <td><%= prediction.away_score %></td>

      </tr>
<% end %>
</table>

<%= form_for(@user) do |f| %>
   <div class="field">
    <%= f.label :home %><br />
    <%= f.text_field :home %>
  </div>
  <div class="field">
    <%= f.label :home_score %><br />
    <%= f.text_field :home_score %>
  </div>
  <div class="field">
    <%= f.label :away %><br />
    <%= f.password_field :away %>
  </div>
  <div class="field">
    <%= f.label :away_score %><br />
    <%= f.password_field :away_score %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>




